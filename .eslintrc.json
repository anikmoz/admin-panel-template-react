{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 9
  },
  "settings": {
    "react": {
      "version": "16.4.2"
    }
  },
  "globals": {
    "describe": true,
    "it": true,
    "before": true
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eol-last": "error",
    "no-console": "off",
    "max-len": [1, 80, 2, {"ignoreComments": true}],
    "keyword-spacing": [
      "error", {
        "after": true,
        "before": true
      }
    ]
  }
}
